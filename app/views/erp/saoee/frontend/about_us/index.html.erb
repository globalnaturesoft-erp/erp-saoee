<% title "Về chúng tôi" %>
<!-- PAGE HEADING-->
<section class="section breadcrumb p-t-65 p-b-35">
    <div class="container">
        <div class="page-heading">
            <h2 class="title-2">Về chúng tôi</h2>
            <h4 class="title-sub title-sub--c8 m-b-15">
                <%= link_to "Trang chủ", erp_saoee.root_path %> <i class="ti-angle-double-right"></i>
                <%= 'Về chúng tôi' %>
            </h4>
        </div>
    </div>
</section>
<!-- END PAGE HEADING-->

<!-- ABOUT US-->
<section class="section p-t-20">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-12">
                <% if @about.present? %>
                    <div class="text--s16-40 m-b-15 text-justify">
                        <%= @about.content.html_safe %>
                    </div>
                <% else %>
                    <div class="alert alert-warning">
                        <i class="fa fa-warning"></i> Nội dung đang được cập nhật.
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
<!-- END ABOUT US-->

