<!-- SERVICE-->
<section class="p-t-60 p-b-55">
    <div class="container">
        <div class="section-title">
            <h5 class="title-sub">chúng tôi làm gì</h5>
            <h2 class="title-1">DỊCH VỤ CỦA CHÚNG TÔI</h2>
        </div>
        <div class="row no-gutters">
            <%
                @services = Erp::Articles::Category.get_categories_by_alias_service
                    .where(parent_id: nil)
                    .order('erp_articles_categories.custom_order ASC')
            %>
            <% @services.each_with_index do |service,index| %>
                <div class="col-md-6 col-lg-4">
                    <article class="media media-service">
                        <% if false %>
                        <figure class="media__img">
                            <img src="/frontend/images/icon/service-01.png" alt="architecture" />
                        </figure>
                        <% end %>
                        <div class="media__title">
                            <h3 class="title">
                                <%= link_to service.name, service_link(service) %>
                            </h3>
                            <span class="number"><%= format('%02d', index + 1) %></span>
                        </div>
                        <p class="media__text">Lorem ipsum dolor sit amet, consectetur adipist pricing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    </article>
                </div>
            <% end %>
        </div>
    </div>
</section>
<!-- END SERVICE-->