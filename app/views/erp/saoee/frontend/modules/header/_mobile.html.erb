<div class="header-mobile d-block d-lg-none">
    <div class="header-mobile__bar">
        <div class="container-fluid">
            <div class="header-mobile__bar-inner">
                <a class="logo" href="<%= erp_saoee.root_path %>">
                    <img src="/frontend/images/icon/logo-main.png" alt="SAO-EE.VN" />
                </a>
                
                <div class="nav-custom">
                    <div class="mod-languages">
                        <ul class="lang-inline">
                            <% if I18n.locale == :vi %>
                                <li class="lang">
                                    <%= link_to url_for(locale: :en) do %>
                                        <img title="English" alt="English" src="/frontend/images/icon/flags/gb.svg">
                                    <% end %>
                                </li>
                            <% else %>
                                <li class="lang">
                                    <%= link_to url_for(locale: :vi) do %>
                                        <img title="Tiếng Việt" alt="Vietnames" src="/frontend/images/icon/flags/vn.svg">
                                    <% end %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                    <button class="hamburger hamburger--slider float-right" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <nav class="header-nav-menu-mobile">
        <div class="container-fluid">
            <ul class="menu nav-menu menu-mobile">
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/home' %>">
                    <a href="<%= erp_saoee.root_path %>"><%= t('home') %></a>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/about_us' %>">
                    <a href="<%= erp_saoee.about_us_path %>"><%= t('about_us') %></a>
                </li>
                <li class="menu-item menu-item-has-children <%= 'active' if params[:controller] == 'erp/saoee/frontend/service' %>">
                    <a href="<%= erp_saoee.service_path %>"><%= t('service') %></a>
                    <ul class="sub-menu">
                        <%
                            @service_menus = Erp::Articles::Category.get_categories_by_alias_service
                                .where(parent_id: nil)
                                .order('erp_articles_categories.custom_order ASC')
                        %>
                        <% @service_menus.each do |menu| %>
                            <li class="menu-item">
                                <%= link_to menu.name, service_link(menu) %>
                            </li>
                        <% end %>
                    </ul>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/project' %>">
                    <a href="<%= erp_saoee.project_path %>"><%= t('project') %></a>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/blog' %>">
                    <a href="<%= erp_saoee.blog_path %>"><%= t('blog') %></a>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/contact_us' %>">
                    <a href="<%= erp_saoee.contact_us_path %>"><%= t('contact_us') %></a>
                </li>
            </ul>
        </div>
    </nav>
</div>