<div class="header-mobile d-block d-lg-none">
    <div class="header-mobile__bar">
        <div class="container-fluid">
            <div class="header-mobile__bar-inner">
                <a class="logo" href="<%= erp_saoee.root_path %>">
                    <img src="/frontend/images/icon/logo-main.png" alt="SAO-EE.VN" />
                </a>
                
                <div class="nav-custom">
                    <div class="mod-languages">
                        <ul class="lang-inline">
                            <li class="">
                                <div class="dropdown">
                                    <a class="lang-menu" href="javascript:void(0)">
                                        <% if I18n.locale == :vi %>
                                            <img class="lang-menu" src="/frontend/images/icon/flags/vi.svg" alt="Tiếng Việt">
                                        <% end %>
                                        <% if I18n.locale == :en %>
                                            <img class="lang-menu" src="/frontend/images/icon/flags/en.svg" alt="English">
                                        <% end %>
                                        <% if I18n.locale == :ja %>
                                            <img class="lang-menu" src="/frontend/images/icon/flags/ja.svg" alt="日本語">
                                        <% end %>
                                    </a>
                                    <div class="lang-content">
                                        <%= link_to url_for(locale: :vi) do %>
                                            <img src="/frontend/images/icon/flags/vi-2.svg" /> Tiếng Việt
                                        <% end %>
                                        <%= link_to url_for(locale: :en) do %>
                                            <img src="/frontend/images/icon/flags/en-2.svg" /> English
                                        <% end %>
                                        <%= link_to url_for(locale: :ja) do %>
                                            <img src="/frontend/images/icon/flags/ja-2.svg" /> 日本語
                                        <% end %>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <button class="hamburger hamburger--slider float-right" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <nav class="header-nav-menu-mobile">
        <div class="container-fluid">
            <ul class="menu nav-menu menu-mobile">
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/home' %>">
                    <a href="<%= erp_saoee.root_path %>"><%= t('header.nav.home') %></a>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/about_us' %>">
                    <a href="<%= erp_saoee.about_us_path %>"><%= t('header.nav.about_us') %></a>
                </li>
                <li class="menu-item menu-item-has-children <%= 'active' if params[:controller] == 'erp/saoee/frontend/service' %>">
                    <a href="<%= erp_saoee.service_path %>"><%= t('header.nav.service') %></a>
                    <ul class="sub-menu">
                        <%
                            @service_menus = Erp::Articles::Category.get_categories_by_alias_service
                                .where(parent_id: nil)
                                .order('erp_articles_categories.custom_order ASC')
                        %>
                        <% @service_menus.each do |menu| %>
                            <li class="menu-item">
                                <% if I18n.locale == :vi %>
                                    <%= link_to menu.name, service_link(menu) %>
                                <% elsif I18n.locale == :en %>
                                    <%= link_to menu.en_name, service_link(menu) %>
                                <% elsif I18n.locale == :ja %>
                                    <%= link_to menu.ja_name, service_link(menu) %>
                                <% end %>
                            </li>
                        <% end %>
                    </ul>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/project' %>">
                    <a href="<%= erp_saoee.project_path %>"><%= t('header.nav.project') %></a>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/blog' %>">
                    <a href="<%= erp_saoee.blog_path %>"><%= t('header.nav.blog') %></a>
                </li>
                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/contact_us' %>">
                    <a href="<%= erp_saoee.contact_us_path %>"><%= t('header.nav.contact_us') %></a>
                </li>
            </ul>
        </div>
    </nav>
</div>