<div class="header header-1 d-none d-lg-block js-header-1">
    <div class="header__bar">
        <div class="wrap wrap--w1790">
            <div class="container container-fluid">
                <div class="header__content">
                    <div class="logo">
                        <a href="<%= erp_saoee.root_path %>">
                            <img src="/frontend/images/icon/logo-main.png" alt="SAO-EE.VN" />
                        </a>
                    </div>
                    <div class="header__content-right">
                        <nav class="header-nav-menu">
                            <ul class="menu nav-menu">
                                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/home' %>">
                                    <a href="<%= erp_saoee.root_path %>">Trang chủ</a>
                                </li>
                                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/about_us' %>">
                                    <a href="<%= erp_saoee.about_us_path %>">Về chúng tôi</a>
                                </li>
                                <li class="menu-item menu-item-has-children <%= 'active' if params[:controller] == 'erp/saoee/frontend/service' %>">
                                    <a href="<%= erp_saoee.service_path %>">Dịch vụ</a>
                                    <ul class="sub-menu">
                                        <%
                                            @service_menus = Erp::Articles::Category.get_categories_by_alias_service
                                                .where(parent_id: nil)
                                                .order('erp_articles_categories.custom_order ASC')
                                        %>
                                        <% @service_menus.each do |menu| %>
                                            <li class="menu-item">
                                                <%= link_to menu.name, service_link(menu) %>
                                            </li>
                                        <% end %>
                                    </ul>
                                </li>
                                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/project' %>">
                                    <a href="<%= erp_saoee.project_path %>">Dự án</a>
                                </li>
                                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/blog' %>">
                                    <a href="<%= erp_saoee.blog_path %>">Tin tức</a>
                                </li>
                                <li class="menu-item <%= 'active' if params[:controller] == 'erp/saoee/frontend/contact_us' %>">
                                    <a href="<%= erp_saoee.contact_us_path %>">Liên hệ</a>
                                </li>
                            </ul>
                        </nav>
                        <%= render "erp/saoee/frontend/modules/header/social" if false %>
                        <div class="mod-languages">
                            <ul class="lang-inline">
                                <% if false %>
                                    <li class="lang">
                                        <a href="#"> <img title="Tiếng Việt" alt="Vietnames" src="/frontend/images/icon/flags/vn.svg"> </a>
                                    </li>
                                <% end %>
                                <li class="lang">
                                    <a href="#"> <img title="English" alt="English" src="/frontend/images/icon/flags/gb.svg"> </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>