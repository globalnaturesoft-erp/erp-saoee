<aside class="widget-area widget-sidebar">
    <% if false %>
        <div class="widget widget_search">
            <form class="search-form" method="GET" action="#">
                <input class="search-field" type="text" placeholder="Search here...">
                <button class="search-submit" type="submit">
                    <span class="ti-search"></span>
                </button>
            </form>
        </div>
    <% end %>
    <% if !@categories.empty? %>
        <div class="widget widget_categories">
            <h4 class="widget-title"><%= t('.categories') %></h4>
            <ul>
                <% @categories.each do |cat| %>
                    <%
                        cat_name = cat.name
                        if cat.name.present? and cat.en_name.present?
                            if I18n.locale == :vi
                                cat_name = cat.name
                            else
                                cat_name = cat.en_name
                            end
                        end
                    %>
                    <li class="cat-item">
                        <%= link_to cat_name, erp_saoee.blog_with_category_path(url_friendly(cat.name), cat.id) %>
                        <span class="cat-count">(<%= cat.get_articles.count %>)</span>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="widget widget_recent_entries">
        <h4 class="widget-title"><%= t('.newest_blogs') %></h4>
        <ul>
            <% @newest_blogs.each do |post| %>
                <%
                    post_name = post.name
                    if post.name.present? and post.en_name.present?
                        if I18n.locale == :vi
                            post_name = post.name
                        else
                            post_name = post.en_name
                        end
                    end
                %>
                <li>
                    <%= link_to "<i class=\"zmdi zmdi-collection-text zmdi-hc-fw\"></i> #{post_name}".html_safe, blog_link(post) %>
                </li>
            <% end %>
        </ul>
    </div>
    <% projects = Erp::Projects::Project.newest_projects(9) %>
    <% if projects.count >= 3 %>
        <div class="widget widget_instagram">
            <h4 class="widget-title"><%= t('.latest_projects') %></h4>
            <ul class="widget_instagram_list">
                <% projects.each do |project| %>
                    <%
                        project_name = project.name
                        if project.name.present? and project.en_name.present?
                            if I18n.locale == :vi
                                project_name = project.name
                            else
                                project_name = project.en_name
                            end
                        end
                    %>
                    <li>
                        <%= link_to (image_tag project.image.small), project_link(project), title: project_name %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <% if false %>
        <div class="widget widget_tag_cloud">
            <h4 class="widget-title"><%= t('tags') %></h4>
            <div class="tagcloud">
                <ul class="wp-tag-cloud">
                    <li>
                        <a href="#">a</a>
                    </li>
                    <li>
                        <a href="#">b</a>
                    </li>
                </ul>
            </div>
        </div>
    <% end %>
</aside>