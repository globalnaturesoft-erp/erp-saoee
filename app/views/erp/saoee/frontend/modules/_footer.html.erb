<!-- FOOTER-->
<footer class="footer bg-parallax">
    <div class="bg-overlay bg-overlay--p85"></div>
    <div class="container p-t-60 p-b-40">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="footer-col">
                    <div class="widget m-b-10">
                        <a class="logo" href="#">
                            <img src="/frontend/images/icon/logo-white.png" alt="SAO-EE.VN" />
                        </a>
                    </div>
                    <% @company_info = Erp::Contacts::Contact.get_main_contact %>
                    <% if !@company_info.nil? %>
                        <div class="widget widget-address">
                            <ul>
                                <li class="text-uppercase">
                                    <strong>
                                        <% if I18n.locale == :vi %>
                                            <%= @company_info.name %>
                                        <% elsif I18n.locale == :en %>
                                            <%= @company_info.en_name %>
                                        <% elsif I18n.locale == :ja %>
                                            <%= @company_info.ja_name %>
                                        <% end %>
                                    </strong>
                                </li>
                                <li><%= t('.address') %>: <%= full_address(@company_info) %></li>
                                <% if @company_info.phone.present? %>
                                    <li><%= t('.phone_number') %>: <%= link_to @company_info.phone, "tel:#{@company_info.phone}" %></li>
                                <% end %>
                                <% if @company_info.hotline.present? %>
                                    <li><%= t('.hotline') %>: <%= link_to @company_info.hotline, "tel:#{@company_info.hotline}" %></li>
                                <% end %>
                                <% if @company_info.email.present? %>
                                    <li><%= t('.email') %>: <%= mail_to @company_info.email, @company_info.email %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="footer-col p-l-70 p-md-l-0">
                    <div class="widget widget_pages">
                        <h4 class="widget-title"><%= t('.service') %></h4>
                        <ul>
                            <%
                                @service_menus = Erp::Articles::Category.get_categories_by_alias_service
                                    .where(parent_id: nil)
                                    .order('erp_articles_categories.custom_order ASC')
                            %>
                            <% @service_menus.each do |menu| %>
                                <li>
                                    <% if I18n.locale == :vi %>
                                        <%= link_to menu.name, service_link(menu) %>
                                    <% elsif I18n.locale == :en %>
                                        <%= link_to menu.en_name, service_link(menu) %>
                                    <% elsif I18n.locale == :ja %>
                                        <%= link_to menu.ja_name, service_link(menu) %>
                                    <% end %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-6">
                <div class="footer-col p-l-70 p-md-l-0">
                    <div class="widget widget_pages">
                        <h4 class="widget-title"><%= t('.link') %></h4>
                        <ul>
                            <li>
                                <a href="<%= erp_saoee.about_us_path %>"><%= t('.about_us') %></a>
                            </li>
                            <li>
                                <a href="<%= erp_saoee.project_path %>"><%= t('.project') %></a>
                            </li>
                            <li>
                                <a href="<%= erp_saoee.blog_path %>"><%= t('.blog') %></a>
                            </li>
                            <li>
                                <a href="<%= erp_saoee.recruitment_path %>"><%= t('.recruiting') %></a>
                            </li>
                            <li>
                                <a href="<%= erp_saoee.contact_us_path %>"><%= t('.contact_us') %></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-6">
                <div class="footer-col p-l-70 p-md-l-0">
                    <h4 class="widget-title"><%= t('.socials') %></h4>
                    <div class="widget widget_socials">
                        <div id="link-buttons" class="list-social-footer">                     
                            <!-- Facebook -->
                            <a href="https://www.facebook.com/SAO-EE-469949339865339/" target="_blank">
                                <img src="/frontend/images/icon/socials/facebook.png" alt="Facebook" title="Follow us on Facebook" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container p-t-10 p-b-10">
            <div class="row">
                <div class="col-md-12">
                    <p class="font-12 text-gray m-0 text-center">
                        Copyright &copy; 2018 - <%= Time.now.strftime('%Y') %> <span class="text-color">SAO-EE.VN</span>. All Rights Reserved. <br/>
                        Designed by <a href="http://hoangkhang.com.vn" target="_blank">Hoang Khang Incotech</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- END FOOTER-->